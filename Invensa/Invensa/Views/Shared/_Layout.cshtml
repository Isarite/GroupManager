<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Invensa</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        body {
            display: table-cell;
            vertical-align: middle;
        }
    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Invensa", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Įmonių posistemė<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Užregistruoti įmonę", "Create", "Companies")</li>
                            <li>@Html.ActionLink("Peržiūrėti įmones", "Index", "Companies")</li>
                            <li role="separator" class="divider"></li>
                            <li class="dropdown-header">Skaičiuoklės</li>
                            <li>@Html.ActionLink("WACC", "WACC", "Companies")</li>

                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Vartotojų valdymas <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Kurti anketą", "Create", "Questionnaire")</li>
                            <li>@Html.ActionLink("Rodyti anketas", "Index", "Questionnaire")</li>
                            <li>@Html.ActionLink("Rodyti kandidatus", "ListCandidates", "Users")</li>
                            <li>@Html.ActionLink("Generuoti protokolą", "Create", "Protocols")</li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Biblioteka <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Įvesti knygą", "Create", "CRUD")</li>
                            <li>@Html.ActionLink("Peržiūrėti knygas", "Index", "CRUD")</li>
                        </ul>
                    </li>
                    <!--<li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    <li>@Html.ActionLink("Kurti anketą", "Create", "Questionnaire")</li>
                    <li>@Html.ActionLink("Rodyti anketas", "Index", "Questionnaire")</li>
                    <li>@Html.ActionLink("Rodyti kandidatus", "ListCandidates", "Users")</li>
                    <li>@Html.ActionLink("Generuoti protokolą", "Create", "Protocols")</li>-->

                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - KTU Invensa</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
